# EditorConfig is awesome:
# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf # linux
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.{py}]
indent_style = space
indent_size = 4

# markdown
[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,html,css}]
indent_size = 2
